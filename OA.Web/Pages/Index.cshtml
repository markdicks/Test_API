@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="neon-bg py-5">
    <div class="container text-center">
        <h1 class="display-3 mb-4 glow-text">Welcome to Our Developer Hub</h1>
        <p class="text-center lead mb-5">Explore powerful APIs, try live apps, and connect with our ecosystem.</p>

        <div class="row justify-content-center mb-4">
            <div class="col-md-4">
                <div class="card neon-box h-100">
                    <div class="card-body">
                        <h5 class="card-title">API Docs</h5>
                        <p class="card-text">Dive into our detailed API documentation and start building.</p>
                        <a href="/swagger" class="btn btn-primary">View Docs</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3 mt-md-0">
                <div class="card neon-box h-100">
                    <div class="card-body">
                        <h5 class="card-title">Sample Apps</h5>
                        <p class="card-text">Interact with example apps showcasing real API use cases.</p>
                        <a href="/apps" class="btn btn-success">Explore Apps</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3 mt-md-0">
                <div class="card neon-box h-100">
                    <div class="card-body">
                        <h5 class="card-title">Visit GitHub</h5>
                        <p class="card-text">Learn more about our products, team, and updates.</p>
                        <a href="https://github.com/markdicks" class="btn btn-info" target="_blank">Go to GitHub</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
